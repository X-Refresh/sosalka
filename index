  <script>
    // Ссылка на кнопку (ссылку) и подсказку
    const link = document.querySelector('.tech-link');
    const tooltip = document.getElementById('tooltip');

    // Показать подсказку при наведении курсора на ссылку
    link.addEventListener('mouseenter', () => {
      tooltip.style.display = 'block'; // Показываем подсказку
    });

    // Скрыть подсказку, когда курсор уходит с ссылки
    link.addEventListener('mouseleave', () => {
      tooltip.style.display = 'none'; // Скрываем подсказку
    });
  </script>
